# api_service.py - заглушка для API сервиса

class APIService:
    """Сервис для работы с внешним API"""
    
    def __init__(self, api_key: str, timeout: int = 30):
        """Инициализация сервиса"""
        self.api_key = api_key
        self.timeout = timeout
        self.base_url = "https://api.example.com"
    
    def get_user_data(self, user_id: int):
        """Получение данных пользователя"""
        # TODO: реализовать получение данных
        return {
            "id": user_id,
            "name": "Unknown",
            "email": "user@example.com",
            "status": "active"
        }
    
    def update_user(self, user_id: int, data: dict):
        """Обновление данных пользователя"""
        # TODO: реализовать обновление
        return {"success": True, "user_id": user_id}
    
    def delete_user(self, user_id: int):
        """Удаление пользователя"""
        # TODO: реализовать удаление
        return {"deleted": True, "user_id": user_id}


class MockResponse:
    """Мок-объект для тестирования"""
    
    def __init__(self, status_code: int = 200, data: dict = None):
        self.status_code = status_code
        self.data = data or {}
    
    def json(self):
        return self.data
